<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

	<display-name>elab</display-name>
	<description>
		I2U2 ELab Application
	</description>
  
	<taglib>
		<taglib-uri>
			http://java.sun.com/jsp/jstl/core
		</taglib-uri>
		<taglib-location>
           c.tld
		</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>
			http://www.i2u2.org/jsp/elabtl
		</taglib-uri>
		<taglib-location>
           elab.tld
		</taglib-location>
	</taglib>
	<taglib>
    	<taglib-uri>
    		http://jakarta.apache.org/taglibs/xtags-1.0
    	</taglib-uri>
	    <taglib-location>
	    	taglibs-xtags.tld
	    </taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>
			http://java.sun.com/jsp/jstl/fmt
		</taglib-uri>
		<taglib-location>
			fmt.tld
		</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>
			http://java.sun.com/jsp/jstl/xml
		</taglib-uri>
		<taglib-location>
			x.tld
		</taglib-location>
	</taglib>
	
	<taglib>
		<taglib-uri>
			http://www.i2u2.org/jsp/ogretl
		</taglib-uri>
		<taglib-location>
           ogre.tld
		</taglib-location>
	</taglib>
	
	<!-- dwr is used by the upload progress -->
	<!-- being some kind of ajax life-simplifier, it could be used for other ajaxy things -->
	<servlet>
        <servlet-name>dwr-invoker</servlet-name>
        <display-name>DWR Servlet</display-name>
        <servlet-class>uk.ltd.getahead.dwr.DWRServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>logLevel</param-name>
            <param-value>WARN</param-value>
        </init-param>
    </servlet>
	<servlet-mapping>
        <servlet-name>dwr-invoker</servlet-name>
        <url-pattern>/dwr/*</url-pattern>
    </servlet-mapping>
    
	<servlet>
        <servlet-name>downloader</servlet-name>
        <servlet-class>gov.fnal.elab.Downloader</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>downloader</servlet-name>
    	<url-pattern>/cosmic/data/download</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>downloader</servlet-name>
    	<url-pattern>/cms/data/download</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>downloader</servlet-name>
    	<url-pattern>/ligo/data/download</url-pattern>
    </servlet-mapping>
</web-app>
