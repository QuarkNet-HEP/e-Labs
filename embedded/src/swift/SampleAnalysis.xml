<program xmlns="http://ci.uchicago.edu/swift/2007/07/swiftscript"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <types>
    <xs:schema targetNamespace="http://ci.uchicago.edu/swift/2007/07/swiftscript">
     <xs:simpleType name="file">
       <xs:restriction base="xs:string"/>
     </xs:simpleType>
    </xs:schema>
  </types>
  <procedure name="echo">

      <output 
    name="f" type="file"

     xsi:nil="true" />

      <input 
    name="msg" type="string"

     xsi:nil="true" />
    <binding>
      <application>
        <executable>echo</executable>
        <stdout><function name="filename">
          <variableReference>f</variableReference></function></stdout><variableReference>msg</variableReference>  </application>
    </binding>
  </procedure>
  <variable name="text" type="string"><function name="arg">
    <stringConstant>text</stringConstant></function></variable>
  <dataset name="out" type="file">
    <mapping descriptor="single_file_mapper">
      <param name="file"><function name="arg">
        <stringConstant>output</stringConstant></function></param>
    </mapping>
  </dataset>
  <call proc="echo">
    <output><variableReference>out</variableReference></output>
    <input><variableReference>text</variableReference></input>
  </call>
</program>
