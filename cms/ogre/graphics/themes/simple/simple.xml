<?xml version="1.0" encoding="UTF-8"?>

<!-- Simple theme suitable for old IE versions -->
<theme name="simple" path="graphics/themes/simple">

  <windowlet  class="sWindowlet">

    <background class="sBkg" src="background.jpg"      width="640" height="480"/>
    <inactive   class="sBkg" src="background-inactive" width="640" height="480"/>
    <icon       class="sIcon"/>

    <titleBar   class="sTitle">
      <dragBar  class="sDrag"/>
      <button   class="sExit" src="exit.jpg" event='onmousedown' action='close'/>
    </titleBar>

    <footer     class="sFooter">
      <status   class="sStatus" />
      <expand   class="sExpand" event='onmousedown' action='expand'/>
    </footer>

    <content    class="sContent" />

  </windowlet>
  
  <!-- style sheets continaing the style definitons for the windowlets -->
  <style type="stylesheet">simple.css</style>

</theme>
